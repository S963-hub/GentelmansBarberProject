@model ServisViewModel

@{
    Layout = "_Layout";
}

<head>
    <link rel="stylesheet" href="~/css/ServisEkleGuncelle.css" asp-append-version="true" />
</head>

<div class="container mt-4">
    <h2>Yeni Servis Ekle</h2>
    <form asp-action="ServisEkleGuncelle" method="post">
        <input type="hidden" name="salonId" value="@ViewBag.SalonId" />
        <div class="form-group">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="HizmetSuresi"></label>
            <input asp-for="HizmetSuresi" class="form-control" />
            <span asp-validation-for="HizmetSuresi" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="HizmetFiyat"></label>
            <input asp-for="HizmetFiyat" class="form-control" />
            <span asp-validation-for="HizmetFiyat" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">@(Model.Id == 0 ? "Ekle" : "Güncelle")</button>
    </form>
</div>
