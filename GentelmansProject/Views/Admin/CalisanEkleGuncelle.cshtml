@model BerberViewModel

@{
    ViewData["Title"] = "Çalışan Ekle/Güncelle";
    Layout = "Nav";
}

<head>
    <link rel="stylesheet" href="~/css/CalisanEkleGuncelle.css" asp-append-version="true" />
</head>

<div class="container mt-4">
    <h2>@(Model.Id == 0 ? "Yeni Çalışan Ekle (Salon @ViewBag.SalonId)" : "Çalışanı Güncelle (Salon @ViewBag.SalonId)")</h2>
    <form asp-action="CalisanEkleGuncelle" method="post">
        <input type="hidden" name="salonId" value="@ViewBag.SalonId" />
        <div class="form-group">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="UzmanlikAlani"></label>
            <input asp-for="UzmanlikAlani" class="form-control" />
            <span asp-validation-for="UzmanlikAlani" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">@(Model.Id == 0 ? "Ekle" : "Güncelle")</button>
    </form>
</div>
